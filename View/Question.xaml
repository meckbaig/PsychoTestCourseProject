<UserControl x:Class="PsychoTestCourseProject.View.Question"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PsychoTestCourseProject.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel>
            <TextBlock TextWrapping="Wrap" Text="{Binding QuestionText}"/>
            <StackPanel x:Name="ShowedAnswers">
            </StackPanel>
            <Button x:Name="NextButton" Content="Далее" Height="51" Width="160" FontFamily="Microsoft YaHei UI" FontSize="18" Background="#FF6CFFB6" BorderBrush="{x:Null}" Click="NextButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>